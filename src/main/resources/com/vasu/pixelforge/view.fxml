<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            stylesheets="@style.css" prefWidth="1200.0" prefHeight="900.0">
    <left>
        <VBox spacing="20" alignment="TOP_CENTER" styleClass="sidebar" prefWidth="280">
            <Label text="PixelForge Studio" styleClass="label-title"/>
            
            <VBox spacing="10" alignment="CENTER">
                <Button text="Upload Image" onAction="#handleSelectImage" styleClass="button, upload-button" maxWidth="Infinity"/>
                <Button text="Download PNG" onAction="#handleDownload" styleClass="button, download-button" maxWidth="Infinity"/>
            </VBox>
            
            <Separator style="-fx-opacity: 0.1;"/>
            
            <VBox spacing="5" alignment="CENTER_LEFT">
                <Label text="Output Resolution" styleClass="label-sub"/>
                <Slider fx:id="resolutionSlider" min="50" max="400" value="120" showTickLabels="false" showTickMarks="false"/>
            </VBox>
            
            <VBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Render Options" styleClass="label-sub"/>
                <CheckBox fx:id="colorModeCheckBox" text="Enable Color Mode" styleClass="check-box"/>
            </VBox>
            
            <Region VBox.vgrow="ALWAYS"/>
            
            <VBox spacing="5" alignment="CENTER">
                <Label fx:id="statusLabel" text="System Ready" styleClass="label-sub" wrapText="true" alignment="CENTER"/>
                <Label text="v2.0 PRO" style="-fx-text-fill: #444444; -fx-font-size: 10px;"/>
            </VBox>
        </VBox>
    </left>
    <center>
        <StackPane style="-fx-background-color: #050505;">
            <ScrollPane fx:id="scrollPane" styleClass="scroll-pane" fitToWidth="true" fitToHeight="true">
                <StackPane minWidth="1200" minHeight="900" style="-fx-background-color: #050505;">
                    <Canvas fx:id="asciiCanvas"/>
                </StackPane>
            </ScrollPane>
            
            <!-- Loading Overlay -->
            <VBox fx:id="loadingOverlay" visible="false" alignment="CENTER" spacing="15" 
                  style="-fx-background-color: rgba(0,0,0,0.7);">
                <ProgressIndicator maxWidth="60" maxHeight="60"/>
                <Label text="Rendering Masterpiece..." styleClass="loading-label"/>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
